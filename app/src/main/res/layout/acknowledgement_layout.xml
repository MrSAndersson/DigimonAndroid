<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/acknowledgement_hostname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="19sp"
        android:textColor="@android:color/primary_text_light"/>
    <TextView
        android:id="@+id/acknowledgement_servicename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:textSize="15sp"
        android:textColor="@android:color/primary_text_light" />

    <EditText
        android:id="@+id/acknowledgement_comment"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:hint="@string/acknowledgement_dialog_hint"
        />

    <CheckBox
        android:id="@+id/acknowledgement_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/acknowledgement_dialog_notify"/>

</LinearLayout>