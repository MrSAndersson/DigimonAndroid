<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="2dp"
    android:background="@drawable/group_ripple">


    <LinearLayout
        android:id="@+id/status_view_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true">


        <TextView
            android:id="@+id/main_exp_list_critical_count"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="25dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/critical_box"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/main_exp_list_warning_count"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="25dp"
            android:textAlignment="center"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/warning_box"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/main_exp_list_unknown_count"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="25dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/unknown_box"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/main_exp_list_hostname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="?android:expandableListPreferredItemPaddingLeft"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:textColor="@android:color/primary_text_light"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/main_exp_list_hostname_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="?android:expandableListPreferredItemPaddingLeft"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:textStyle="bold"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:background="@drawable/critical_box"
        android:visibility="gone"/>


</RelativeLayout>