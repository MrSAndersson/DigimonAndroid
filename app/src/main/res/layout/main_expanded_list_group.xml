<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="@drawable/group_ripple"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:animateLayoutChanges="true">

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_exp_list_state_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/main_exp_list_critical_count"
            android:padding="4dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/critical_box"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/main_exp_list_critical_ack_count"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/critical_box_ack"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/main_exp_list_warning_count"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:background="@drawable/warning_box"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/main_exp_list_warning_ack_count"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/warning_box_ack"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/main_exp_list_unknown_count"
            android:padding="4dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unknown_box"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/main_exp_list_unknown_ack_count"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@drawable/unknown_box_ack"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/main_exp_list_state_layout"
        android:layout_marginEnd="5dp"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/main_exp_list_hostname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="?android:expandableListPreferredItemPaddingLeft"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"

            android:textColor="@android:color/primary_text_light"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_exp_list_hostname_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="?android:expandableListPreferredItemPaddingLeft"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginStart="37dp"
        android:animateLayoutChanges="true">

        <Button
            android:id="@+id/host_acknowledgement_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/send_acknowledgement" />

        <TextView
            android:id="@+id/host_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/primary_text_light"
            android:paddingTop="3dp" />

    </LinearLayout>

</LinearLayout>